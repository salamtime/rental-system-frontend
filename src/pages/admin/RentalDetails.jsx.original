          type: 'video',
          blob: file,
          url: URL.createObjectURL(file),
          name: file.name,
          timestamp: new Date().toISOString(),
          duration: 0,
          size: file.size
        };
        
        setCapturedFiles(prev => [...prev, fileObj]);
        setIsUploading(false);
      } catch (err) {
